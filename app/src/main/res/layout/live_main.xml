<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/live_bg">

    <TextClock
        android:id="@+id/live_time"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/live_timeText"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"
        app:layout_constraintLeft_toRightOf="@+id/live_search"
        android:layout_marginLeft="70dp" />

    <TextView
        android:background="@drawable/live_eventlist_bg"
        android:id="@+id/live_epg_progName"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:text="CCTV 15"
        android:textSize = "@dimen/live_epg_progNameText"
        android:textColor="@color/white"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintRight_toRightOf="@+id/live_player"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/live_player"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/live_player" />

    <ListView
        android:id="@+id/live_eventList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/live_eventlist_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/live_epg_progName"
        app:layout_constraintRight_toRightOf="@+id/live_epg_progName"
        app:layout_constraintTop_toBottomOf="@+id/live_epg_progName"
        app:layout_constraintVertical_bias="0.333"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <ImageView
        android:background="@drawable/live_wlan"
        android:id="@+id/imageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintRight_toRightOf="@+id/live_progList"
        app:layout_constraintTop_toTopOf="@+id/live_time"
        app:layout_constraintBottom_toBottomOf="@+id/live_time" />

    <TextClock
        android:id="@+id/live_week"
        android:layout_width="wrap_content"
        android:layout_height="11dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/live_weekText"
        app:layout_constraintLeft_toRightOf="@+id/live_time"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginLeft="6dp"
        app:layout_constraintTop_toTopOf="@+id/live_time" />

    <TextClock
        android:id="@+id/live_date"
        android:layout_width="wrap_content"
        android:layout_height="11dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/live_dateText"
        app:layout_constraintLeft_toRightOf="@+id/live_time"
        app:layout_constraintTop_toBottomOf="@+id/live_week"
        tools:layout_constraintTop_creator="1"
        android:layout_marginLeft="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/live_time"
        app:layout_constraintVertical_bias="0.0" />

    <ListView
        android:id="@+id/live_progList"
        android:layout_width="413dp"
        android:layout_height="0dp"
        android:layout_marginRight="48dp"
        android:background="@drawable/live_proglist_bg"
        app:layout_constraintBottom_toBottomOf="@+id/live_eventList"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/live_player"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/live_player"
        android:layout_marginLeft="10dp"
        app:layout_constraintVertical_bias="0.0" />

    <SearchView
        android:id="@+id/live_search"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/live_search_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <FrameLayout
        android:id="@+id/live_player"
        android:layout_width="435dp"
        android:layout_height="270dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/live_player_bg"
        app:layout_constraintTop_toBottomOf="@+id/live_search"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginLeft="48dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>