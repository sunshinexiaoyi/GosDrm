<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="10dp">

    <!--设置标题-->
    <TextView
        android:id = "@+id/setting_title"
        android:text = "@string/setting_title"
        android:textSize="@dimen/setting_title"
        android:textColor = "@color/white"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <!--设置项-->
    <TextView
        android:id = "@+id/setting_chagneUser"
        android:text = "@string/setting_changeuser"
        android:textColor="@color/white"
        android:textSize="@dimen/setting_changeUser"
        android:textStyle="bold"
        android:drawableLeft="@drawable/setting_changeuser"
        android:drawablePadding="10sp"
        android:background="@drawable/live_channel_selector"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:focusable="true"
        android:clickable="true"/>

    <!--分割线-->
    <View
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RadioGroup
        android:id="@+id/setting_radioGroup"
        android:layout_width = "match_parent"
        android:layout_height = "40dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:id = "@+id/setting_channelSource"
            android:text = "@string/setting_autoSource"
            android:textColor="@color/white"
            android:textSize="@dimen/setting_channelSource"
            android:textStyle="bold"
            android:drawableLeft="@drawable/setting_channel_resource"
            android:drawablePadding="11sp"
            android:gravity="center_vertical"
            android:layout_width="170dp"
            android:layout_height="40dp" />
        <!--网络源-->
        <RadioButton
            android:id = "@+id/setting_netSource"
            android:text = "@string/setting_netSource"
            android:textSize="@dimen/setting_channelSource"
            android:textColor="@color/white"
            android:background="@drawable/live_channel_selector"
            android:gravity="center"
            android:layout_width="120dp"
            android:layout_height="40dp" />
        <!--本地源-->
        <RadioButton
            android:id = "@+id/setting_localSource"
            android:text = "@string/setting_localSource"
            android:textSize="@dimen/setting_channelSource"
            android:textColor="@color/white"
            android:background="@drawable/live_channel_selector"
            android:gravity="center"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"/>
    </RadioGroup>
    <!--分割线-->
    <View
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
</LinearLayout>
