<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/global_bg"
    tools:context="gos.gosdrm.activity.LoginActivity">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/login_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.36"
        android:id="@+id/imageView" />

    <EditText
        android:id="@+id/text"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/login_edit_bg"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:hint="请输入用户名"
        android:textColorHint="#ffffff"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"

        android:paddingLeft="10dp"
        android:textSelectHandleLeft="@id/text"
        app:layout_constraintVertical_bias="0.574" />
    <EditText
        android:id="@+id/password"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/text"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/text"
        android:layout_marginTop="15dp"
        android:hint="请输入密码"
        android:gravity="center"
        android:textColorHint="#ffffff"

        android:textSelectHandleLeft="@id/password"
        android:paddingLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/text"
        app:layout_constraintHorizontal_bias="0.0"
        android:background="@drawable/login_edit_bg"/>

    <Button
        android:id="@+id/login"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/password"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/password"
        app:layout_constraintHorizontal_bias="0.0"
        android:background="@drawable/login_button_select"
        android:layout_marginTop="13dp"
        android:text="连接"
        android:textColor="#ffff"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/password" />
</android.support.constraint.ConstraintLayout>
